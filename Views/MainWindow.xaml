<Window x:Class="ChristmasTree.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChristmasTree.Views"
        mc:Ignorable="d"
        Title="MainWindow"  Height="450" Width="800" AllowsTransparency="True"
        ResizeMode="NoResize"
        Background="Transparent"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Topmost="True">
    <Grid>
        <Canvas x:Name="canvas" Background="Transparent">
            <Image Name="Tree" Source="../Resources/Tree.png" Height="400"/>
        </Canvas>
    </Grid>
</Window>
